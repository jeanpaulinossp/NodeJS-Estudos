<%- include('../../partials/header.ejs') %> <%- include('../../partials/navbar.ejs') %>

<body>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h2>Edição de categorias</h2>
      </div>
      <div class="card-body">
        <form method="post" action="/categories/update">
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Defina o título da categoria"
            value="<%= category.title %>"
          />
          <input type="hidden" name="id" value="<%= category.id %>" />
          <button class="btn btn-dark">Atualizar</button>
        </form>
      </div>
    </div>
  </div>
</body>

