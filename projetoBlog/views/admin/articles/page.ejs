<body>
  <div class="container">
    <% result.articles.rows.forEach(article => { %>
    <div class="card">
      <div class="card-header"><%= article.title %></div>
      <div class="card-body">
        <a href="/<%= article.slug %>" class="btn btn-dark">Ler artigo</a>
      </div>
    </div>

    <% }) %>
    <div class="row">
      <div class="col col-12">
        <a style="float: left; text-decoration: none" href="/articles/page/<%= result.page - 1 %>"
          >Anterior</a
        >
        <% if (result.next) { %>
        <a style="float: right; text-decoration: none" href="/articles/page/<%= result.page + 1 %>"
          >Pr√≥xima</a
        >
        <% } %>
      </div>
    </div>
  </div>
</body>

